<div class="box box-primary">
  <div class="box-header">
    <%= fa_icon "cutlery" %>
    <h1 class="box-title"><%= t("service_types.index.title") %></h1>
    <div class="box-tools">
      <%= link_to new_service_type_path, class: "btn btn-primary" do %>
        <%= fa_icon "plus" %>
        <%= t("service_types.index.add") %>
      <% end %>
    </div>
  </div>
  <div class="box-body">
    <table id="service-types-data-table"
      class="table table-bordered table-condensed table-striped">
      <thead>
        <tr>
          <th><%= ServiceType.human_attribute_name(:name) %></th>
        </tr>
      </thead>

      <tbody>
        <%= render(partial: "service_type", collection: @service_types) %>
      </tbody>
    </table>
  </div>
</div>
