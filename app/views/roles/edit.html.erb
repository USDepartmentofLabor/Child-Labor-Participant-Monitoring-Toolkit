<%= form_for @role do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <%= fa_icon "users" %>
          <h1 class="box-title"><%= t "roles.edit.title" %></h1>
        </div>
        <div class="box-body">
          <div class="field-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="field-group">
            <%= f.label :abilities %>
            <%= hidden_field_tag "role[ability_ids][]", nil %>
            <%= Ability.all.each do |ability| %>
              <div class="checkbox">
                <label>
                  <%= check_box_tag "role[ability_ids][]", ability.id, @role.ability_ids.include?(ability.id), id: dom_id(ability), class: "square-red" %>
                  <%= ability.name %>
                  <small>
                    <%= ability.description %>
                  </small>
                </label>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to roles_path, class: "btn btn-danger btn-block" do -%>
        <%= fa_icon "times" %>
        <%= t "general.cancel" %>
      <% end -%>
    </div>
    <div class="col-md-4">
      <%= f.submit t("general.submit"), class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end -%>
