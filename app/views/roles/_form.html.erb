<%= form_for @role do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <%= fa_icon "users" %>
          <h1 class="box-title"><%= title %></h1>
        </div>
        <div class="box-body">
          <div class="field-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="field-group">
            <%= f.label :abilities %>
            <%= f.collection_check_boxes :ability_ids, Ability.all, :id, :display_strings  do |cb| %>
              <div class="checkbox">
                <%= cb.label do %>
                  <%= cb.check_box(class: "square-red") %>
                  <%= cb.text[:display_name] %>
                  <small><%= cb.text[:description] %></small>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to roles_path, class: "btn btn-danger btn-block" do -%>
        <%= fa_icon "times" %>
        <%= t "general.cancel" %>
      <% end -%>
    </div>
    <div class="col-md-4">
      <%= f.submit t("general.submit"), class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end -%>
