<h2 class="text-center"><%=  @report.title %></h2>

<h3 class="text-center"><%= @report.desc %></h3>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th colspan="2"></th>
      <th>Target</th>
      <th colspan="3">Children provided with services</th>
    </tr>
    <tr>
      <th>Reporting period</th>
      <th></th>
      <th>Total # of Children</th>
      <th>Girls</th>
      <th>Boys</th>
      <th>Total Children</th>
    </tr>
  </thead>
  <tbody>
    <% @work_statuses.each_with_index do |status, i| %>
      <tr>
        <% if i == 0 %>
          <td rowspan="<%= @work_statuses.count %>">PERIOD 1<br><%= @report.date_range_in_text %></td>
        <% end %>
        <td><%= status.name %></td>
        <td><%= @results[i][:target_total] %></td>
        <td><%= @results[i][:educated][:girls] %></td>
        <td><%= @results[i][:educated][:boys] %></td>
        <td><%= @results[i][:educated][:total] %></td>
      </tr>
    <% end %>
  </tbody>
</table>