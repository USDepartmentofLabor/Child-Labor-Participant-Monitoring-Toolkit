<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= @report.title %>
    </h3>
  </div>
  <div class="box-body">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th colspan="2"></th>
          <th>TARGET</th>
          <th colspan="3">CHILDREN PROVIDED WITH SERVICES</th>
        </tr>
        <tr>
          <th>REPORTING PERIOD</th>
          <th></th>
          <th>Total # of Children</th>
          <th>Girls</th>
          <th>Boys</th>
          <th>Total Children</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |r| %>
        <% [:cl, :cahr, :total].each_with_index  do |type, i| %>
        <tr>
          <% if i == 0 %>
          <td rowspan="3"><%= r[:reporting_period] %></td>
          <% end %>
          <td><%= type.to_s.upcase %></td>
          <td><%= r[:target][type] %></td>
          <td><%= r[:educated][type][:girls] %></td>
          <td><%= r[:educated][type][:boys] %></td>
          <td><%= r[:educated][type][:total_children] %></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
    <p>CL: Children Engaged in Child Labor</p>
    <p>CAHR: Children at High-Risk of Entering Child Labor</p>
  </div>
</div>
