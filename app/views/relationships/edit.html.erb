<div class="page-header">
  <%= link_to relationships_path, class: 'btn btn-default' do %>
    <%= fa_icon "caret-left" %>
    <%= t("general.back") %>
  <% end %>
  <h1><%= t("relationships.edit.title") %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-body">
        <div class="form-group">
          <label><%= Relationship.human_attribute_name(:canonical_name) %></label>
          <p><%= @relationship.canonical_name %></p>
        </div>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
