              <i class="fa fa-angle-double-right"></i>
              <%= t("custom_fields.index") %>
            <% end -%>
          </li>
        </ul>
      <% end -%>

      <%= content_tag :li, class: (controller_name == "services" ? "active" : "")  do -%>
