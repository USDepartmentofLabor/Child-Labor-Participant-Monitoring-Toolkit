<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <ul class="sidebar-menu">
      <%= content_tag :li, class: (controller_name == 'projects' ? "active" : "")  do -%>
        <%= link_to project_path(@project) do %>
          <i class="fa fa-tachometer"></i>
          <%= t("projects.show.dashboard") %>
        <% end %>
      <% end -%>

      <%= content_tag :li do -%>
        <%= link_to new_project_path do -%>
          <i class="fa fa-plus"></i>
          <%= t("projects.new.title") %>
        <% end -%>
      <% end if controller_name == 'projects' -%>

      <%= content_tag :li, class: (controller_name == 'children' ? "active" : "")  do -%>
        <%= link_to "javascript:void(0);", class: 'is-dropdown-menu' do -%>
          <span class="badge pull-right"><b class="caret"></b></span>
          <i class="fa fa-child"></i><%= Child.model_name.human.pluralize %>
        <% end -%>
        <ul>
          <li>
            <%= link_to project_children_path(@project) do -%>
              <i class="fa fa-angle-double-right"></i>
              <%= t("children.index.title") %>
            <% end -%>
          </li>
          <li>
            <%= link_to new_project_child_path(@project) do -%>
              <i class="fa fa-angle-double-right"></i>
              <%= t("children.index.add") %>
            <% end -%>
          </li>
          <li>
            <%= link_to new_project_custom_field_path(@project, model_type: "Child") do -%>
              <i class="fa fa-angle-double-right"></i>
              <%= t("custom_fields.index") %>
            <% end -%>
          </li>
        </ul>
      <% end -%>

