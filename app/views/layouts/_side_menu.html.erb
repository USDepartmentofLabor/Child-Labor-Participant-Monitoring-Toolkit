        <span class="badge pull-right"><b class="caret"></b></span>
        <i class="fa fa-file-text-o"></i><%= Report.model_name.human.pluralize %>
      <% end -%>
      <ul>
        <li>
          <%= link_to project_reports_path(@project) do -%>
            <i class="fa fa-angle-double-right"></i>
            <%= t("reports.index.title") %>
          <% end -%>
        </li>
        <li>
          <%= link_to new_project_report_path(@project) do -%>
            <i class="fa fa-angle-double-right"></i>
            <%= t("reports.index.add") %>
          <% end -%>
        </li>
      </ul>
    <% end -%>
  </ul>
