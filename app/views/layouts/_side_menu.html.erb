          <%= link_to project_households_path(@project) do -%>
            <i class="fa fa-angle-double-right"></i>
            <%= t("households.index.title") %>
          <% end -%>
        </li>
        <li>
          <%= link_to new_project_household_path(@project) do -%>
            <i class="fa fa-angle-double-right"></i>
            <%= t("households.index.add") %>
          <% end -%>
        </li>
      </ul>
    <% end -%>

    <%= content_tag :li, class: (controller_name == 'indicators' ? "current" : "")  do -%>
      <%= link_to "javascript:void(0);", class: 'is-dropdown-menu' do -%>
