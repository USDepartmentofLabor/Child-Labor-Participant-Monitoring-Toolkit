        <i class="fa fa-flag-o"></i><%= Indicator.model_name.human.pluralize %>
      <% end -%>
      <ul>
        <li>
          <%= link_to project_indicators_path(@project) do -%>
            <i class="fa fa-angle-double-right"></i>
            <%= t("indicators.index.title") %>
          <% end -%>
        </li>
        <li>
          <%= link_to new_project_indicator_path(@project) do -%>
            <i class="fa fa-angle-double-right"></i>
            <%= t("indicators.index.add") %>
          <% end -%>
        </li>
      </ul>
    <% end -%>

