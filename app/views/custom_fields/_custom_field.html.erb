<% field_group_name = "custom_fields[#{custom_field.id}]" %>
<div class="form-group">
  <%= label_tag "custom_fields_#{custom_field.id}_value_text", custom_field.name %>
  <%= markdown(custom_field.help_text) %>
  <%= custom_input custom_field, "#{field_group_name}[value_text]", (local_assigns[:options].nil? ? {} : options) %>
</div>
