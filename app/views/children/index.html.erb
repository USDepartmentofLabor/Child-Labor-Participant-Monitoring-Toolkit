<div class="row">
  <div class="col-xs-12">
    <div class="page-header">
      <%= link_to new_child_path, class: 'btn btn-primary pull-right' do %>
        <%= fa_icon "plus" %>
        <%= t("children.index.add") %>
      <% end %>
      <h1><%= t("children.index.title") %></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body">
        <table class="table table-bordered table-striped" id="child-data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th><%= Child.human_attribute_name(:fname) %></th>
              <th><%= Child.human_attribute_name(:lname) %></th>
              <th><%= Child.human_attribute_name(:sex) %></th>
              <th><%= Child.human_attribute_name(:dob) %></th>
              <th><%= Child.human_attribute_name(:intake_date) %></th>
              <th><%= Child.human_attribute_name(:code) %></th>
              <th><%= Child.human_attribute_name(:current_education_status) %></th>
              <th><%= Child.human_attribute_name(:current_work_status) %></th>
            </tr>
          </thead>
          <tbody>
            <%= render(partial: "child", collection: @children) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
