<div class="page-header">
  <%= link_to new_child_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Child
  <% end %>
  <h1>Listing children</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Fname</th>
            <th>Lname</th>
            <th>Mname</th>
            <th>Sex</th>
            <th>Dob</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Country</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @children) do |child| %>
            <td><%= child.fname %></td>
            <td><%= child.lname %></td>
            <td><%= child.mname %></td>
            <td><%= child.sex %></td>
            <td><%= child.dob %></td>
            <td><%= child.address %></td>
            <td><%= child.city %></td>
            <td><%= child.state %></td>
            <td><%= child.country %></td>
            <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
