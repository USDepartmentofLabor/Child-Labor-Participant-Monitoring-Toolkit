<div class="row">
  <div class="col-md-3 form-group">
    <%= f.label :service_id %>
    <%= f.select :service_id,
      options_from_collection_for_select(Service.all, 'id', 'name'),
      {include_blank: true}, {class: "form-control"}
    %>
  </div>

  <div class="col-md-3 form-group">
    <%= f.label :start_date %> (yyy/mm/dd)
    <div>
      <%= f.date_select :start_date, { order: [:month, :day, :year]}, { class: "form-control", style: "display: inline-block; width: 30%;" } %>
    </div>
  </div>

  <div class="col-md-3 form-group">
    <%= f.label :end_date %> (yyy/mm/dd)
    <div>
      <%= f.date_select :end_date, { order: [:month, :day, :year]}, { class: "form-control", style: "display: inline-block; width: 30%;" } %>
    </div>
  </div>

  <div class="col-md-3 form-group">
    <%= f.label :hours %>
    <%= f.text_field :hours, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :notes %>
  <%= f.text_area :notes, class: "form-control", rows: "5" %>
</div>
