<div class='row'>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :start_date %>
      <div class="row date-select">
        <%= f.date_select :start_date, {order: [:month, :day, :year]}, {class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :work_status_id %>
      <%= f.select :work_status_id,
          options_from_collection_for_select(WorkStatus.all, 'id', 'name'),
          {include_blank: true}, {class: "form-control"}
        %>
    </div>

    <div class="form-group">
      <%= f.label :education_status_id %>
      <%= f.select :education_status_id,
          options_from_collection_for_select(EducationStatus.all, 'id', 'name'),
          {include_blank: true}, {class: "form-control"}
        %>
    </div>

    <div class="form-group">
      <%= f.label :note %>
      <%= f.text_area :note, class: "form-control", rows: "5" %>
    </div>

    <%= render partial: 'custom_fields/custom_field', collection: @custom_status_fields %>

    <%= f.hidden_field :user_id %>
  </div>
</div>
