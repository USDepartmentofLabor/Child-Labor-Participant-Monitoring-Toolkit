<div class="page-header">
  <h1><%= t("children.custom_fields.title") %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading"><%= t("children.custom_fields.list") %></div>
  <div class="panel-body">
    <form>
      <% @custom_fields.each do |custom_field| %>
        <div id="pre-field-<%= custom_field.id %>">
          <div class="row">
            <div class="col-md-8">
              <%= render partial: 'custom_field', locals: { custom_field: custom_field, options: {fill: false, disabled: true}} %>
            </div>
            <div class="col-md-4">
              <button class="btn btn-default"><%= fa_icon "pencil" %> Edit</button>
              <%= content_tag :button, class: "btn btn-default delete-custom-field", 
                data: {
                  url: project_custom_field_path(project_id: custom_field.project_id, id: custom_field.id, type: "Child") 
                } do %>
                <%= fa_icon "times" %> <%= t("general.delete") %>
              <% end %>
            </div>
          </div>
          <hr>
        </div>
      <% end %>
    </form>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading"><%= t("children.custom_fields.add") %></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <%= form_for @custom_field, url: create_fields_project_children_path(project_id: @custom_field.project_id) do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :field_type %>
            <%= f.select :field_type, CustomFieldGroup::FIELD_TYPES_OPTIONS, {}, id: "child_field_type", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :selections %> <i>(One line per option.)</i>
            <%= f.text_area :selections, rows: 5, class: "form-control" %>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary"><%= t("general.submit") %></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>