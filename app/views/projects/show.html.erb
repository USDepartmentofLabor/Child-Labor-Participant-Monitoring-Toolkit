<% provide(:title, @project.name + " Dashboard") %>

<div class="row">
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box bg-aqua">
      <span class="info-box-icon">
        <i class="fa fa-child"></i>
      </span>

      <div class="info-box-content">
        <span class="info-box-text">Beneficiaries</span>
        <span class="info-box-number"><%= number_with_delimiter(@total_children, delimiter: ',') %></span>
        <%= progress_bar @total_children_percentage %>
        <span class="progress-description">
          <%= number_to_percentage(@total_children_percentage, precision: 0) %> of <%= number_with_delimiter(@total_children_target) %> targeted beneficiaries serviced
        </span>
      </div>
      <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
  </div>
  <!-- /.col -->
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box bg-green">
      <span class="info-box-icon">
        <i class="fa fa-home"></i>
      </span>

      <div class="info-box-content">
        <span class="info-box-text">Households</span>
        <span class="info-box-number"><%= number_with_delimiter(@total_households, delimiter: ',') %></span>
        <%= progress_bar @total_children_percentage %>
        <span class="progress-description">
          <%= number_to_percentage(@total_households_percentage, precision: 0) %> of <%= number_with_delimiter(@total_households_target) %> targeted households serviced
        </span>
      </div>
      <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
  </div>
  <!-- /.col -->

  <!-- /.col -->
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box bg-red">
      <span class="info-box-icon">
        <i class="fa fa-cutlery"></i>
      </span>

      <div class="info-box-content">
        <span class="info-box-text">Services</span>
        <span class="info-box-number"><%= number_with_delimiter(@total_services) %></span>

      </div>
      <!-- /.info-box-content -->
    </div>
    <!-- /.info-box -->
  </div>
  <!-- /.col -->

  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box bg-yellow clickable" id="timeline">
      <span class="info-box-icon">
        <i class="fa fa-calendar"></i>
      </span>

      <div class="info-box-content">
        <span class="info-box-text">Timeline</span>
        <span class="info-box-number"><%= Date.today.strftime('%A, %B %d, %Y') %></span>
        <%= progress_bar @project_complete_percentage %>

        <span class="progress-description" id="time-elapsed">
          <%= distance_of_time_in_words @project.start_date, Date.today %> into your project
        </span>
        <span class="progress-description hidden" id="time-remaining">
          about <%= distance_of_time_in_words Date.today, @project.end_date %> remain in your project
        <span class="progress-description">
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Beneficiaries Target vs Actual by Reporting Period</h3> (12/28/2013 - 12/31/2016)

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse">
            <i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove">
            <i class="fa fa-times"></i>
          </button>
        </div>
      </div>
      <div class="box-body">
        <div class="chart">
          <canvas id="targetVsActualChart" style="height:230px"></canvas>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
  <div class="col-md-6">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Households Target vs Actual by Reporting Period</h3> (12/28/2013 - 12/31/2016)

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse">
            <i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove">
            <i class="fa fa-times"></i>
          </button>
        </div>
      </div>
      <div class="box-body">
        <div class="chart">
          <canvas id="householdsTargetVsActualChart" style="height:230px"></canvas>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">Beneficiaries by Age</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-1">
            <div class="chart-responsive">
              <canvas id="beneficiariesByAgeChart" style="width: 330px; height: 230px;" width="330" height="230"></canvas>
            </div>
            <!-- ./chart-responsive -->
          </div>
          <!-- /.col -->
          <div class="col-md-4">
            <ul class="chart-legend clearfix">
              <li><i class="fa fa-circle-o text-red"></i> Under 10</li>
              <li><i class="fa fa-circle-o text-green"></i> 10&ndash;12</li>
              <li><i class="fa fa-circle-o text-yellow"></i> 13&ndash;15</li>
              <li><i class="fa fa-circle-o text-aqua"></i> 16&ndash;18</li>
            </ul>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.box-body -->
    </div>
  </div>
  <div class="col-md-4">
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">Beneficiaries by Gender</h3>
        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-2">
            <div class="chart-responsive">
              <canvas id="beneficiariesByGenderChart" style="width: 330px; height: 230px;" width="330" height="230"></canvas>
            </div>
            <!-- ./chart-responsive -->
          </div>
          <!-- /.col -->
          <div class="col-md-4">
            <ul class="chart-legend clearfix">
              <li><i class="fa fa-circle-o text-red"></i> Female</li>
              <li><i class="fa fa-circle-o text-aqua"></i> Male</li>
            </ul>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.box-body -->
    </div>
  </div>
  <div class="col-md-4">
    <!-- USERS LIST -->
    <div class="box box-danger">
      <div class="box-header with-border">
        <h3 class="box-title">Newest Beneficiares</h3>

        <div class="box-tools pull-right">
          <span class="label label-danger">8 New Members</span>
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i>
          </button>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding">
        <ul class="users-list clearfix">
          <% @new_children.each do |child| %>
            <li>
              <%= preview_avatar child, {size: "small"} %>
              <%= link_to child.full_name, child, {class: "users-list-name"} %>
              <span class="users-list-date"><%= child.created_at %></span>
            </li>
          <% end %>
        </ul>
        <!-- /.users-list -->
      </div>
      <!-- /.box-body -->
      <div class="box-footer text-center">
        <%= link_to "View all Beneficiaries", children_path, {class: "uppercase"} %>
      </div>
      <!-- /.box-footer -->
    </div>
    <!--/.box -->
  </div>
</div>
