<div class="page-header">
  <h1><%= t("projects.status_config.title") %></h1>
  <p>Use this page to customize the parameters of the work and education automatic calculation</p>
</div>

<div class="box box-primary">
  <div class="box-header with-border">
    <%= fa_icon "truck" %>
    <h3 class="box-title">
      <%= t("projects.status_config.work_activities_title") %>
    </h3>
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table id="work-activities-data-table" class="table table-condensed table-striped">
        <thead>
          <tr>
            <th><%= WorkActivity.human_attribute_name(:code) %></th>
            <th><%= WorkActivity.human_attribute_name(:display_name) %></th>
            <th><%= t "general.delete" %></th>
          </tr>
        </thead>

        <tbody id="work_activities_details">
          <%= render partial: "work_activity",
          collection: WorkActivity.all.order(:id) %>
        </tbody>
      </table>
    </div>

  </div>
  <!-- box-body -->
  <div class="box-footer clearfix">
    <%= link_to t("work_activities.new.add"),
          new_work_activity_path(@work_activity), remote: true,
          class: "btn btn-primary" %>
  </div>
  <!-- box-footer -->
</div>
<!-- box -->

<div class="box box-primary">
  <div class="box-header with-border">
    <%= fa_icon "briefcase" %>
    <h3 class="box-title">
      <%= t("projects.status_config.occupations_title") %>
    </h3>
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table id="occupations-data-table" class="table table-condensed table-striped">
        <thead>
          <tr>
            <th><%= Occupation.human_attribute_name(:code) %></th>
            <th><%= Occupation.human_attribute_name(:display_name) %></th>
            <th><%= t "general.delete" %></th>
          </tr>
        </thead>

        <tbody id="occupations_details">
          <%= render partial: "occupation",
          collection: Occupation.all.order(:id) %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- box-body -->
  <div class="box-footer clearfix">
    <%= link_to t("occupations.new.add"), new_occupation_path(@occupation),
          remote: true, class: "btn btn-primary" %>
  </div>
  <!-- box-footer -->
</div>
<!-- box -->

<div class="modal modal-info fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>
