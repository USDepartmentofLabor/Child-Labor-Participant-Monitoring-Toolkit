<fieldset class="associated-fields">
  <div class="form-group">
    <%= f.label :country %>
    <%= f.country_select :country, {include_blank: true}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>

  <%= f.hidden_field :_destroy %>

  <%= link_to '#', class: "remove_fields pull-right" do %>
    <i class="fa fa-trash-o"></i><%= t("general.delete") %>
  <% end %>
</fieldset>