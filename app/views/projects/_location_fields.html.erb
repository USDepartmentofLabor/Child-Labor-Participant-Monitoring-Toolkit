<fieldset class="asscciated-fields">
  <div class="form-group">
    <%= f.label :location_type_id %>
    <%= f.collection_select :location_type_id, LocationType.all, :id, :name,
                 { include_blank: true, prompt: true },
                 class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address_line1 %>
    <%= f.text_field :address_line1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address_line2 %>
    <%= f.text_field :address_line2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :zip %>
    <%= f.text_field :zip, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control" %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to '#', class: "remove_fields pull-right" do %>
    <i class="fa fa-trash-o"></i> <%= t("general.delete") %>
  <% end %>
</fieldset>
