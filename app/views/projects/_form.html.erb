<%= form_for(@project, html: { role: "form" }) do |f| %>

<%= error_messages(@project) %>

<div class="box box-primary">
  <div class="box-header with-border">
    <%= fa_icon "info" %>
    <h3 class="box-title">
      <%= t("projects.edit.details_title") %>
    </h3>
  </div>
  <div class="box-body">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cooperative_agreement_number %>
      <%= f.text_field :cooperative_agreement_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date %>
      <div class="input-group date">
        <%= f.text_field :start_date, class: "form-control" %>
        <span class="input-group-addon">
          <%= fa_icon "calendar" %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_date %>
      <div class="input-group date">
        <%= f.text_field :end_date, class: "form-control" %>
        <span class="input-group-addon">
          <%= fa_icon "calendar" %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :organization, "Grantee" %>
      <%= f.text_field :organization, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :funding_amount %>
      <div class="input-group">
        <span class="input-group-addon">
          <%= fa_icon "usd" %>
        </span>
        <%= f.text_field :funding_amount, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :office_address, "Local office location" %>
      <%= f.text_field :office_address, class: "form-control" %>
    </div>

  </div>
</div>

<div class="box box-primary">
  <div class="box-header with-border">
    <%= fa_icon "bullseye" %>
    <h3 class="box-title"><%= t("projects.edit.targets_title") %></h3>
  </div>
  <div class="box-body">
    <%= f.fields_for :project_targets do |builder| %>
    <%= render 'project_target_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Add a target", f, :project_targets, class: "add_fields btn btn-primary" %>
  </div>
</div>

<div class="form-group">
<div class="col-sm-offset-8 col-sm-4">
<button type="submit" class="btn btn-primary btn-block"><%= fa_icon "plus" %>
  <%= t("general.submit") %></button>

<% end %>
