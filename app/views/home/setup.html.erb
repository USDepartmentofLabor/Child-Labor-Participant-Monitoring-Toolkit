<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="box box-primary">
      <div class="box-header">
        <%= fa_icon 'pencil' %>
        <h1 class="box-title">Inital DPMS Setup</h1>
      </div>
      <%= form_for @settings, url: initialize_path, method: :post do |f| %>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :dol_url, 'DOL DPMS API URL' %>
            <%= f.text_field :dol_url, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :api_key, 'DOL DPMS API KEY' %>
            <%= f.text_field :api_key, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :admin_name, 'Administrative Contact Name' %>
            <%= f.text_field :admin_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :admin_email, 'Administrative Contact E-Mail Address' %>
            <%= f.text_field :admin_email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :admin_password, 'Administrative Contact Password' %>
            <%= f.password_field :admin_password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :admin_password_confirm, 'Confirm Administrative Contact Password' %>
            <%= f.password_field :admin_password_confirm, class: 'form-control' %>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-4 col-sm-offset-4">
              <%= f.submit class: 'btn btn-success btn-block' do %>
                Initialize DPMS
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
