<div class="page-section">
<div class="row">
  <% if @projects.length != 0 %>
    <div class="col-md-6">
      <h2>Choose A Project To Start</h2>
      <div class="panel panel-default">
        <div class="collection headings">
          <% @projects.each do |project| %>
            <%= link_to(project.name, project, class: "collection-item") %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="col-md-6">
    <%= link_to new_project_path, class: 'btn btn-primary btn-lg btn-block' do %>
      <%= fa_icon "plus" %>
      <%= t("projects.new.title") %>
    <% end %>
  </div>
</div>
</div>