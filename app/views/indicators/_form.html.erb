<%= form_for(@indicator, html: { role: "form" }) do |f| %>
  <%= error_messages(@indicator) %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <%= fa_icon 'pencil-square-o' %>
      <h3 class="box-title">
        <%= title %>
      </h3>
    </div>
    <div class="box-body">
      <div class="form-group">
        <%= f.label :code %>
        <%= f.text_field :code, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :indicator %>
        <%= f.text_area :indicator, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :use %>
        <%= f.cktext_area :use, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :definitions %>
        <%= f.cktext_area :definitions, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :frequency_definitions %>
        <%= f.cktext_area :frequency_definitions, class: "form-control" %>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :unit_of_measure %>
            <%= f.collection_select :unit_of_measure_id, UnitOfMeasure.all,
              :id, :name,
              {prompt: t("indicators.edit.select_unit_of_measure_prompt")},
              class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :reporting_frequency %>
            <%= f.collection_select :reporting_frequency_id, Frequency.all,
              :id, :name,
              {prompt: t("indicators.edit.select_reporting_frequency_prompt")},
              class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :baseline %>
            <%= f.text_field :baseline, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= submit_or_cancel indicators_path %>

<% end %>
