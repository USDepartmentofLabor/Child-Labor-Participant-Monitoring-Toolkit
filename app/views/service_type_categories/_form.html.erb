<%= form_for(@service_type_category, html: { role: "form" }) do |f| %>
  <%= error_messages(@service_type_category) %>

  <div class="box box-primary">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :definition %>
      <%= f.text_field :definition, class: "form-control" %>
    </div>
  </div>

  <%= submit_or_cancel service_type_categories_path %>

<% end %>
