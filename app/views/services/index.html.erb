<div class="box box-primary">
  <div class="box-header with-border">
    <%= fa_icon "cutlery" %>
    <h1 class="box-title"><%= t("services.index.title") %></h1>
    <div class="box-tools">
      <%= link_to new_service_path, class: "btn btn-primary btn-sm" do %>
        <%= fa_icon "plus", text: t("services.index.add") %>
      <% end %>
    </div>
  </div>

  <div class="box-body">
    <table id="services-data-table"
      class="table table-condensed table-table-hover">
      <thead>
        <tr>
          <th><%= Service.human_attribute_name(:name) %></th>
          <th><%= Service.human_attribute_name(:service_type) %></th>
          <th><%= Service.human_attribute_name(:start_date) %></th>
          <th><%= Service.human_attribute_name(:end_date) %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= render(partial: "service", collection: @services) %>
      </tbody>
    </table>
  </div>
</div>
