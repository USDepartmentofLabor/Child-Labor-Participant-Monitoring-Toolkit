<div class="page-header">
  <%= link_to services_path, class: 'btn btn-default' do %>
  <%= fa_icon "caret-left" %>
  <%= t("general.back") %>
  <% end %>
  <%= link_to edit_service_path(@service), class: 'btn btn-primary' do %>
  <%= fa_icon "pencil" %>
  <%= t("general.edit") %>
  <% end %>
  <%= link_to service_path(@service), method: :delete, data: { confirm: 'Are you sure?' },
    class: "text-center btn btn-danger" do %>
  <span class="sr-only"><%= t("general.delete") %></span>
  <%= fa_icon "times" %>
  <%= t("general.delete") %>
  <% end unless has_recipients(@service) %>
  <h1><%= t("services.show.title") %></h1>
</div>

<div class="box box-primary">
  <div class="box-header">
    <%= fa_icon "cutlery" %>
    <h1 class="box-title"><%= t("services.show.details") %></h1>
  </div>
  <div class="box-body">
    <table class="table table-hover table-listing">
      <tbody>
        <tr>
          <th>ID</td>
          <td><%= @service.id %></td>
        </tr>
        <tr>
          <th><%= Service.human_attribute_name(:name) %></th>
          <td><%= @service.name %></td>
        </tr>
        <tr>
          <th><%= Service.human_attribute_name(:service_type) %></th>
          <td><%= @service.service_type.name unless @service.service_type.nil? %></td>
        </tr>
        <tr>
          <th><%= Service.human_attribute_name(:start_date) %></th>
          <td><%= @service.start_date %></td>
        </tr>
        <tr>
          <th><%= Service.human_attribute_name(:end_date) %></th>
          <td><%= @service.end_date %></td>
        </tr>
        <tr>
          <th><%= Service.human_attribute_name(:description) %></th>
          <td><%= markdown @service.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="box box-primary">
  <div class="box-header">
    <%= fa_icon "cutlery" %>
    <h1 class="box-title"><%= t("services.show.children") %></h1>
  </div>
  <div class="box-body">
    <table class="table table-striped table-bordered" role="grid">
      <thead>
        <tr>
          <th>Beneficiary</th>
          <th>Service Date</th>
          <th>Hours</th>
        </tr>
      </thead>
      <tbody>
        <% @service.service_instances.by_start_date.each do |s| %>
          <tr>
            <td><%= s.child.full_name %></td>
            <td><%= s.start_date %></td>
            <td><%= s.hours %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
