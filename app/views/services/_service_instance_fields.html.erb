<fieldset class="associated-fields">
  <div class="row">
    <div class="col-md-3 form-group">
      <%= f.label :child_id, "Beneficiary" %>
      <%= f.select :child_id, options_from_collection_for_select(Child.all, 'id', 'full_name'), {include_blank: true}, {class: "form-control"} %>
    </div>

    <div class="col-md-3 form-group">
      <%= f.label :start_date %> (yyy/mm/dd)
      <div class="input-group date">
        <%= f.text_field :start_date, class: "form-control" %>
        <span class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </span>
      </div>
    </div>

    <div class="col-md-3 form-group">
      <%= f.label :end_date %> (yyy/mm/dd)
      <div class="input-group date">
        <%= f.text_field :end_date, class: "form-control" %>
        <span class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </span>
      </div>
    </div>

    <div class="col-md-3 form-group">
      <%= f.label :hours %>
      <%= f.text_field :hours, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: "form-control", rows: "5" %>
  </div>

  <%= f.hidden_field :_destroy %>

  <%= link_to "#", class: "remove_fields pull-right" do %>
    <i class="fa fa-trash-o"></i> <%= t("general.delete") %>
  <% end %>
</fieldset>
