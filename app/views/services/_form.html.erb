<%= form_for([@project, @service], html: {role: "form"}) do |f| %>
  <div class="box-body">
    <%= error_messages @service %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :service_type_id %>
          <%= f.select :service_type_id,
            ServiceType.all.collect{|s| [s.name, s.id]}.sort,
            {include_blank: true},
            class: "form-control" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :start_date %>
          <div class="input-group date">
            <%= f.text_field :start_date, class: "form-control" %>
            <span class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </span>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :end_date %>
          <div class="input-group date">
            <%= f.text_field :end_date, class: "form-control" %>
            <span class="input-group-addon">
              <i class="fa fa-calendar"></i>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 10 %>
    </div>
  </div>
  <div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right">
      <%= t "general.submit" %>
    </button>
    <%= link_to project_services_path(@project),
      class: "btn btn-danger pull-right",
      style: "margin-right: 1rem" do %>
      <i class="fa fa-times"></i> <%= t "general.cancel" %>
    <% end %>
  </div>
<% end %>
