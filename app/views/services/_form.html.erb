<%= form_for(@service, html: {role: "form"}) do |f| %>
  <%= error_messages @service %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <%= fa_icon "pencil-square-o" %>
      <h3 class="box-title">
        <%= title %>
      </h3>
    </div>
    <div class="box-body">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :service_type_id %>
            <%= f.select :service_type_id, ServiceType.all.collect {
              |s| [s.name, s.id, {'title': s.definition }]
            }.sort, {include_blank: true}, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :start_date %>
            <div class="row date-select">
              <%= f.date_select :start_date, {order: [:month, :day, :year]},
                {class: "form-control"} %>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :end_date %>
            <div class="row date-select">
              <%= f.date_select :end_date, {order: [:month, :day, :year]},
                {class: "form-control"} %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.cktext_area :description, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= link_to services_path, class: "btn btn-danger btn-block" do %>
        <%= fa_icon 'times', text: t('general.cancel') %>
      <% end %>
    </div>
    <div class="col-sm-4">
      <button type="submit" class="btn btn-primary btn-block">
        <%= t "general.submit" %>
      </button>
    </div>
  </div>
<% end %>
