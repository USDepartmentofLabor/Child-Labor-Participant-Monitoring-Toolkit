<div class="page-header">
  <%= link_to indicator_path(@indicator), class: 'btn btn-default' do %>
    <%= fa_icon "caret-left" %> Back to Indicator
  <% end %>
  <h1><%= t("targets.edit.title") %> - <%= @indicator.indicator %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_tag update_multiple_indicator_targets_path(@indicator), method: :put do %>
    <div class="box box-primary">

      <div class="box-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Reporting Period</th>
              <th>Target Value</th>
            </tr>
          </thead>
          <tbody>
              <% @indicator.targets.each_with_index do |target, index| %>
                <tr>
                  <td>Period <%= index + 1 %></td>
                  <td><%= text_field_tag "targets[]", target.target_value %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
      </div>

      <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right">
          <%= t "general.submit" %>
        </button>
        <%= link_to indicators_path,
          class: "btn btn-danger pull-right",
          style: "margin-right: 1rem" do %>
          <i class="fa fa-times"> </i> <%= t "general.cancel" %>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>
</div>
