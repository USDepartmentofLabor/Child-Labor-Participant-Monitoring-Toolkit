<div class="box box-primary">
  <div class="box-header with-border">
    <%= fa_icon "home" %>
    <h3 class="box-title"><%= t("households.index.title") %></h3>
    <div class="box-tools">
      <%= link_to new_household_path, class: "btn btn-primary btn-sm" do %>
        <%= fa_icon 'plus', text: t('households.index.add') %>
      <% end %>
      <%= link_to households_path(format: :xlsx),
        class: 'btn btn-primary btn-sm' do %>
        <%= fa_icon 'file-excel-o', text: t('households.index.export') %>
      <% end %>
    </div>
  </div>
  <div class="box-body">
    <table id="households-data-table"
      class="table table-hover table-condensed">
      <thead>
        <tr>
          <th><%= Household.human_attribute_name(:id) %></th>
          <th><%= Household.human_attribute_name(:name) %></th>
          <th><%= Household.human_attribute_name(:children) %></th>
          <th><%= Household.human_attribute_name(:adults) %></th>
          <th><%= Household.human_attribute_name(:intake_date) %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "household", collection: @households %>
      </tbody>
    </table>
  </div>
</div>
