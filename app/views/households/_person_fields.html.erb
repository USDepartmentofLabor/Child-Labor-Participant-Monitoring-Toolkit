<fieldset class="associated-fields">
  <div class="form-group">
    <%= f.label :intake_date %>
    <div class="row date-select">
      <%= f.date_select :intake_date, {order: [:month, :day, :year]},
        {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :middle_name %>
    <%= f.text_field :middle_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sex %>
    <div class="checkbox">
      <% Person::SEX_OPTIONS.each do |sex_option| %>
        <label class="radio-inline">
          <%= f.radio_button :sex, sex_option[1], class: "square-red" %>
          <%= t(sex_option[0]) %>
        </label>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :dob %>
    <div class="row date-select">
      <%= f.date_select :dob, {order: [:month, :day, :year],
        start_year: 1920, prompt: true}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :relationship_id %>
    <%= f.collection_select :relationship_id, Relationship.all, :id,
      :display_name, {include_blank: true, prompt: true},
      {class: "form-control", data: {toggle: 'other'}} %>
  </div>

  <div class="form-group" hidden>
    <%= f.label :relationship_other %>
    <%= f.text_field :relationship_other, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :is_beneficiary do %>
      <%= f.check_box :is_beneficiary, class: "square-red" %>
      <%= Person.human_attribute_name :is_beneficiary %>
    <% end %>
  </div>

  <%= f.hidden_field :_destroy %>
  <%= link_to '#', class: "remove_fields pull-right" do %>
    <i class="fa fa-trash-o"></i><%= t("general.delete") %>
  <% end %>
</fieldset>
