<fieldset class="associated-fields">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :estimated_volume_produced %>
    <%= f.text_field :estimated_volume_produced, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :estimated_volume_sold %>
    <%= f.text_field :estimated_volume_sold, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :estimated_income %>
    <%= f.text_field :estimated_income, class: "form-control" %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to '#', class: "remove_fields pull-right" do %>
    <i class="fa fa-trash-o"></i> <%= t("general.delete") %>
  <% end %>
</fieldset>
