<div class="page-header">
  <%= link_to households_path(), class: 'btn btn-default' do %>
  <%= fa_icon "caret-left" %>
  <%= t("general.back") %>
  <% end %>
  <%= link_to edit_household_path(@household), class: 'btn btn-primary' do %>
  <%= fa_icon "pencil" %>
  <%= t("general.edit") %>
  <% end %>
  <h1><%= t("households.show.title") %></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="box box-primary">
      <div class="box-header with-border">
        <%= fa_icon "info" %>
        <h3 class="box-title"><%= t("households.show.family_information") %></h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered table-hover table-listing">
          <tbody>
            <tr>
              <td>ID</td>
              <td><%= @household.id %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:name) %></td>
              <td><%= @household.name %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:code) %></td>
              <td><%= @household.code %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:intake_date) %></td>
              <td><%= @household.intake_date %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:address) %></td>
              <td><%= @household.address %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:city) %></td>
              <td><%= @household.city %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:state) %></td>
              <td><%= @household.state %></td>
            </tr>
            <tr>
              <td><%= Household.human_attribute_name(:country) %></td>
              <td><%= @household.country_name %></td>
            </tr>
            <% @custom_fields.each do |custom_field| %>
            <tr>
              <td><%= custom_field.name %></td>
              <td><%= custom_field_value(custom_field) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="box box-primary">
      <div class="box-header with-border">
        <%= fa_icon "child" %>
        <h3 class="box-title"><%= t("households.show.children") %></h3>
      </div>
      <div class="box-body">
        <ul>
          <%= render partial: "child", collection: @children %>
        </ul>
      </div>
    </div>

    <div class="box box-primary">
      <div class="box-header with-border">
        <%= fa_icon "user" %>
        <h3 class="box-title"><%= t("households.show.adults") %></h3>
      </div>
      <div class="box-body">
        <ul>
          <%= render partial: "adult", collection: @adults %>
        </ul>
      </div>
    </div>

  </div>
</div>
